image:
  tag: "dev"

configs:
  - name: "{{ service_name }}"
    path: configs/"{{ service_name }}"-config-dev

container:
  name: "{{ service_name }}"
  port: "{{ service_port }}"

volume_mount:
  - mountName: app-config
    mountPath: /config/application.properties
    subPath: application.properties

volume:
  name: "{{ service_name }}"

service:
  - servicename: "{{ service_name  }}"
    name: http
    port: "{{ service_port }}"
    targetPort: 8080
    protocol: TCP

resources:
  limits:
    cpu: '{{ cpu_limits }}'
    memory: '{{ memory_limits }}'
  requests:
    cpu: '{{ cpu_requests }}'
    memory: '{{ memory_requests }}

common_config:
  volume: true
  mount: true
